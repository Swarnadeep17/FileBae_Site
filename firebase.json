{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/main_page/pdf/pdf_to_image/api/**",
        "function": "api"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/main_page/**",
        "destination": "/main_page/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "public/main_page/pdf/pdf_to_image/functions"
  }
}
